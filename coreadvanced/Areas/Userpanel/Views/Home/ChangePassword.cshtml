@model Core.DTOs.ChangePasswordViewModel
@{
    ViewData["Title"] = "تغییر کلمه عبوری";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page">تغییر کلمه عبوری </li>
        </ul>
    </nav>
</div>
<div class="container">
    <div class="user-account">
        <div class="row">
            <partial name="_Sidebar" />
            <div class="col-md-9 col-sm-8 col-xs-12">
                <section class="user-account-content">
                    <header><h1> تغییر کلمه عبوری </h1></header>
                    <div class="inner form-layer">
                        <form asp-action="ChangePassword" method="post">
                            @if (ViewBag.issuccess != null)
                            {
                                <div class="alert alert-success">
                                    کلمه عبوری شما با موفقیت تغییر کرد

                                </div>
                                <script>
                                    var delay = 2000;
                                    setTimeout(function () { window.location = "https://localhost:44373/Login"; }, delay);
                                </script>
                            }

                            <div class="row">
                                <div class="col-md-7 col-sm-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon" id="username"><i class="zmdi zmdi-key"></i></span>
                                        <input type="password" asp-for="OldPassword" class="form-control" placeholder="کلمه عبوری فعلی" aria-describedby="username">
                                    </div>
                                </div>
                                <div class="col-md-7 col-sm-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-key"></i></span>
                                        <input type="password" asp-for="Password" class="form-control" placeholder="کلمه عبوری جدید" aria-describedby="email-address">
                                    </div>
                                </div>
                                <div class="col-md-7 col-sm-8 col-xs-12">
                                    <div class="input-group">
                                        <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-key"></i></span>
                                        <input type="password" asp-for="RePassword" class="form-control" placeholder="تکرار کلمه عبوری جدید" aria-describedby="email-address">
                                    </div>
                                </div>
                                <div class="text-danger" asp-validation-summary="All"></div>
                                <div class="col-md-7 col-sm-8 col-xs-12">
                                    <button class="btn btn-success">تغییر کلمه عبور </button>
                                </div>
                            </div>

                        </form>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>