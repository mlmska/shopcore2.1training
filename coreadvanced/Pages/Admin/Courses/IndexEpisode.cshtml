@page "{id}"
@model coreadvanced.Pages.Admin.Courses.IndexEpisodeModel
@{
    ViewData["Title"] = "IndexEpisode";
}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">لیست قسمت ها</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    لیست قسسمت ها

                </div>
                <div class="panel-body">

                    <div class="col-md-12" style="margin:10px 0">
                        <a asp-page="CreateEpisode" asp-route-id="@ViewData["Courseid"].ToString()" class="btn btn-outline btn-success">
                            افزودن قسمت جدید
                        </a>
                    </div>
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                        <thead>
                            <tr>
                               
                                <th>نام قسمت</th>
                                <th>زمان جلسه</th>
                                <th>رایگان</th>
                                <th>دستورات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var episode in Model.Listepisode)
                            {
                                <tr>
                                   
                                    <td>@episode.EpisodeTitle</td>
                                    <td>
                                        @episode.EpisodeTime
                                    </td>
                                    <td>
                                        @if (episode.isFree)
                                        {
                                            <span class="text-success">
                                                <i class="glyphicon glyphicon-ok"></i>
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">
                                                <i class="glyphicon glyphicon-remove"></i>
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Admin/Courses/EditEpisode/@episode.EpisodeID" class="btn btn-warning btn-sm">
                                            ویرایش
                                        </a>
                                        <a href="/Admin/Roles/DeleteRole/@episode.CourseID" class="btn btn-danger btn-sm">
                                            حذف
                                        </a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>