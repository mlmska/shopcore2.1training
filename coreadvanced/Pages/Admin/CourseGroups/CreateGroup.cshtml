@page "{id?}"
@model coreadvanced.Pages.Admin.CourseGroups.CreateGroupModel
@{
    ViewData["Title"] = "CreateGroup";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن گروه</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="CourseGroups.ParentID" />
        <div class="col-md-12">
            <div class="panel panel-default">

                <div class="panel-heading">
                    عنوان گروه

                </div>

                <div class="panel-body">
                    <div class="form-group">
                        <label>نام گروه</label>
                        <input type="text" asp-for="CourseGroups.GroupTitle" class="form-control" />
                    </div>
                    <div class="col-md-12">
                        <p>
                            <input type="submit" value="ذخیره اطلاعات" class="btn btn-outline btn-default" />

                        </p>
                    </div>
                </div>

            </div>
        </div>


    </form>

</div>

