@page
@using Core.Convertors;
@model coreadvanced.Pages.Admin.Users.ListDeleteModel
@{
    ViewData["Title"] = "ListDelete";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست کاربران حذف شده</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                 لیست کاربران حذف شده
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row">
                            <form>
                                <div class="col-md-5 col-sm-5">
                                    <input type="text" name="filterusername" class="form-control" placeholder="نام کاربری" />
                                </div>
                                <div class="col-md-5 col-sm-5">
                                    <input type="text" name="filteremail" class="form-control" placeholder="ایمیل" />
                                </div>
                                <div class="col-md-2 col-sm-2">
                                    <button type="submit" value="بگرد" class="btn btn-info">بگرد</button>
                                    <a class="btn btn-default btn-sm" href="/Admin/Users">پاک کن</a>
                                </div>
                            </form>
                        </div>
                       
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>نام کاربری</th>
                                    <th>ایمیل</th>
                                    <th>وضعیت</th>
                                    <th>تاریخ ثبت نام</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.UserForAdminViewModel.users)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td>@user.Email</td>
                                        <td>
                                            @if (user.isActive == true)
                                            {
                                                <p class="text text-success">فعال</p>
                                            }
                                            else
                                            {
                                                <p class="text text-danger">غیر فعال</p>
                                            }
                                        </td>
                                        <td>@user.Registerdate.toshamsi()</td>
                                        <td>
                                            <a href="/Admin/Users/EditUser/@user.UserID" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>
                                            <a href="#" class="btn btn-danger btn-sm">
                                                حذف
                                            </a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                    <ul class="pagination">
                                        @for (int i = 1; i <= Model.UserForAdminViewModel.PageCount; i++)
                                        {
                                            <li class="paginate_button @((i==Model.UserForAdminViewModel.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0">
                                                <a href="/Admin/Users?pageid=@i">@i</a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>